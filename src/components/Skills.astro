---
import TypeScript from "./icons/TypeScript.astro"
import React from "./icons/React.astro"
import Docker from "./icons/Docker.astro"
import MySQL from "./icons/MySQL.astro"
import PostgreSQL from "./icons/PostgreSQL.astro"
import Linux from "./icons/Linux.astro"
import Rust from "./icons/Rust.astro"
import Python from "./icons/Python.astro"

const TAGS = {
  TYPESCRIPT: {
    name: "TypeScript",
    class: "bg-[#3178C6] text-white",
    icon: TypeScript,
  },
  REACT: {
    name: "React",
    class: "bg-[#003159] text-white",
    icon: React,
  },
  DOCKER: {
    name: "Docker",
    class: "bg-[#008fe2] text-white",
    icon: Docker,
  },
  MYSQL: {
    name: "MySQL",
    class: "bg-[#00758F] text-white",
    icon: MySQL,
  },
  POSTGRESQL: {
    name: "PostgreSQL",
    class: "bg-[#336791] text-white",
    icon: PostgreSQL,
  },
  LINUX: {
    name: "Linux",
    class: "bg-[#FCC624] text-black",
    icon: Linux,
  },
  RUST: {
    name: "Rust",
    class: "bg-[#000000] text-white",
    icon: Rust,
  },
  PYTHON: {
    name: "Python",
    class: "bg-[#3776AB] text-white",
    icon: Python,
  },
}
---

<article class="py-8">
  <div class="max-w-6xl mx-auto px-4">
    <div class="mb-16 text-center">
      <h2 class="text-3xl font-bold text-gray-900 dark:text-gray-100 mb-4">
        Stack Tecnológico
      </h2>
      <p class="text-gray-700 dark:text-gray-300 text-lg">
        Tecnologías que uso día a día
      </p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
      {
        Object.values(TAGS).map((tag) => (
          <div class={`flex items-center justify-center gap-3 p-6 rounded-xl transition-all duration-300 hover:scale-105 ${tag.class} shadow-lg`}>
            <tag.icon class="size-8" />
            <span class="text-lg font-medium">{tag.name}</span>
          </div>
        ))
      }
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mt-16">
      <div class="bg-gray-900/5 dark:bg-gray-700/10 rounded-xl p-6 backdrop-blur-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Frontend</h3>
        <p class="text-gray-700 dark:text-gray-300">
          React · TypeScript · UI/UX
        </p>
      </div>

      <div class="bg-gray-900/5 dark:bg-gray-700/10 rounded-xl p-6 backdrop-blur-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Backend</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Node.js · PostgreSQL · Docker · Python
        </p>
      </div>

      <div class="bg-gray-900/5 dark:bg-gray-700/10 rounded-xl p-6 backdrop-blur-lg">
        <h3 class="text-xl font-bold text-gray-900 dark:text-gray-100 mb-4">Sistemas</h3>
        <p class="text-gray-700 dark:text-gray-300">
          Linux · Rust · DevOps
        </p>
      </div>
    </div>
  </div>
</article>
